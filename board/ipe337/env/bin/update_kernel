. /env/config

if [ -z /dev/nor0.kernel ]; then
        echo "Please add a partition /dev/nor0.kernel containing the kernel image"
        exit 1
fi

image=uImage-ipe337

if [ $# = 1 ]; then
        image=$1
fi

if [ x$ip = xdhcp ]; then
        dhcp
fi

unprotect /dev/nor0.kernel
erase /dev/nor0.kernel
tftp "$image" /dev/nor0.kernel
