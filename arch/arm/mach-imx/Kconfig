	bool "phyCORE-i.MX27"
	select HAS_CFI
	select MACH_HAS_LOWLEVEL_INIT
	select SPI
	select DRIVER_SPI_IMX
	select DRIVER_SPI_MC13783
	select HAVE_MMU
